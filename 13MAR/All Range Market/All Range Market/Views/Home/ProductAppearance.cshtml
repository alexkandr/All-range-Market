@model All_Range_Market.Models.Product
 
<a asp-controller="Home" asp-action="SingleProduct" asp-route-brand="@Model.Vendor.Brand" asp-route-productId="@Model.ProductId">
    <div class="view view-fifth">
        <div class="top_box">
            <h3 class="m_1">@Model.Name</h3>
            <p class="m_2">@Model.Vendor.Brand </p>
            <div class="grid_img">
                <div class="css3"><img src="@Model.Images[0].Path" alt="" /></div>
                <div class="mask">
                    <div class="info">Быстрый просмотр</div>
                </div>
            </div>
            <div class="price">@Model.Price.ToString("c", System.Globalization.CultureInfo.GetCultureInfo("ru-ru"))</div>
        </div>
    </div>
    <span class="rating">
        @{ for (int i = 5; i > 0; i--)
            {
                if (5 - Model.Rate >= i)
                {
                    <input type="radio" class="rating-input" id="rating-input-1-@i" name="rating-input-1">
                    <label for="rating-input-1-@i" class="rating-star"></label>
                }
                else
                {
                    <input type="radio" class="rating-input" id="rating-input-1-@i" name="rating-input-1">
                    <label for="rating-input-1-@i" class="rating-star1"></label>
                }
            }
        }
        (@Model.Bought)
    </span>
    <ul class="list">
        <li>
            <img src="images/plus.png" alt="" />
            <ul class="icon1 sub-icon1 profile_img">
                <li>
                    <a class="active-icon c1">В корзину </a>
                    <ul class="sub-icon1 list">
                        <li><h3>sed diam nonummy</h3><a href=""></a></li>
                        <li><p>@Model.Description</p></li>
                    </ul>
                </li>
            </ul>
        </li>
    </ul>
    <div class="clear"></div>
</a>